<sect1 id="catalogs">
<title
>Catàlegs</title>
<para>
  <indexterm
><primary
>Catàlegs</primary
></indexterm>
<screenshot>
<screeninfo
>Finestra amb Catàlegs</screeninfo>
<mediaobject>
  <imageobject>
    <imagedata fileref="viewops.png" format="PNG"/>
  </imageobject>
  <textobject>
