<sect1 id="ekos-analyze">
    <title
>Analitzar</title>
    <indexterm>
        <primary
>Eines</primary>
        <secondary
>Ekos</secondary>
        <tertiary
>Analitza</tertiary>
    </indexterm>
    <screenshot>
        <screeninfo
>Mòdul Analitza d'Ekos </screeninfo>
        <mediaobject>
            <imageobject>
                <imagedata fileref="ekos_analyze.png" format="PNG"/>
            </imageobject>
