<sect1 id="ekos-setup">
    <title
>Налаштовування Ekos</title>
<indexterm>
    <primary
>Інструменти</primary>
    <secondary
>Ekos</secondary>
    <tertiary
>Налаштовування</tertiary>
</indexterm>
<screenshot>
    <screeninfo
>Резюме Ekos </screeninfo>
    <mediaobject>
        <imageobject>
            <imagedata fileref="ekos_summary.png" format="PNG"/>
        </imageobject>
